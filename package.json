{
    "name": "@proto-component/react-library-a",
    "version": "0.1.1",
    "private": true,
    "description": "React component library for prototyping and experimentation.",
    "keywords": [
        "react",
        "component",
        "library",
        "prototyping"
    ],
    "homepage": "https://github.com/nickstaroba/proto-component-react-library-a",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/nickstaroba/proto-component-react-library-a.git"
    },
    "license": "MIT",
    "author": "Nick Staroba",
    "scripts": {
        "build": "npm run bundle",
        "bundle": "rollup -c",
        "bundle:watch": "rollup -w -c",
        "commit-msg": "sh scripts/git-hooks/commit-msg.sh ${HUSKY_GIT_PARAMS}",
        "install:cleanup": "rimraf package-lock.json ; rimraf node_modules",
        "lint": "npm run lint:compile && npm run lint:eslint && npm run lint:stylelint && npm run lint:prettier",
        "lint:compile": "tsc -p tsconfig.json --noEmit --noErrorTruncation --pretty",
        "lint:eslint": "eslint '**/*.{js,jsx,ts,tsx}' --fix",
        "lint:prettier": "prettier './**/*.{css,html,js,json,jsx,md,scss,ts,tsx}' --write",
        "lint:stylelint": "stylelint 'src/**/*.{css,scss}'",
        "release": "standard-version",
        "start": "start-storybook",
        "test": "jest -w 1",
        "test:coverage": "jest --coverage -w 1",
        "watch": "npm-run-all --parallel *:watch"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint",
            "commit-msg": "npm run commit-msg",
            "pre-push": "npm run lint && npm run test"
        }
    },
    "browserslist": [
        "defaults"
    ],
    "dependencies": {
        "clsx": "1.1.0"
    },
    "devDependencies": {
        "@babel/core": "7.9.0",
        "@react-hook/window-size": "1.0.13",
        "@rollup/plugin-commonjs": "11.0.2",
        "@rollup/plugin-image": "2.0.4",
        "@storybook/react": "5.3.18",
        "@testing-library/jest-dom": "5.3.0",
        "@testing-library/react": "10.0.2",
        "@testing-library/react-hooks": "3.2.1",
        "@types/jest": "25.2.1",
        "@types/node": "13.11.0",
        "@types/react": "16.9.32",
        "@types/react-dom": "16.9.6",
        "@types/react-is": "16.7.1",
        "@typescript-eslint/eslint-plugin": "2.26.0",
        "@typescript-eslint/parser": "2.26.0",
        "@welldone-software/why-did-you-render": "4.0.6",
        "@wessberg/rollup-plugin-ts": "1.2.23",
        "autoprefixer": "9.7.5",
        "babel-loader": "8.1.0",
        "babel-preset-react-app": "9.1.2",
        "clsx": "1.1.0",
        "css-loader": "3.4.2",
        "eslint": "6.8.0",
        "eslint-config-airbnb-base": "14.1.0",
        "eslint-config-prettier": "6.10.1",
        "eslint-plugin-import": "2.20.2",
        "eslint-plugin-jest": "23.8.2",
        "eslint-plugin-react": "7.19.0",
        "eslint-plugin-react-hooks": "3.0.0",
        "eslint-plugin-simple-import-sort": "5.0.2",
        "husky": "4.2.3",
        "jest": "25.2.7",
        "lorem-ipsum": "2.0.3",
        "mq-polyfill": "1.1.8",
        "node-sass": "4.13.1",
        "npm-run-all": "4.1.5",
        "postcss-clean": "1.1.0",
        "prettier": "2.0.2",
        "react": "16.13.1",
        "react-dom": "16.13.1",
        "react-is": "16.13.1",
        "react-test-renderer": "16.13.1",
        "rimraf": "3.0.2",
        "rollup": "2.3.3",
        "rollup-plugin-babel": "4.4.0",
        "rollup-plugin-filesize": "6.2.1",
        "rollup-plugin-ignore-import": "1.3.2",
        "rollup-plugin-node-resolve": "5.2.0",
        "rollup-plugin-peer-deps-external": "2.2.2",
        "rollup-plugin-postcss": "2.5.0",
        "rollup-plugin-terser": "5.3.0",
        "sass-loader": "8.0.2",
        "standard-version": "7.1.0",
        "style-loader": "1.1.3",
        "stylelint": "13.3.0",
        "stylelint-config-recommended": "3.0.0",
        "stylelint-config-sass-guidelines": "7.0.0",
        "svg-react-loader": "0.4.6",
        "ts-jest": "25.3.1",
        "tslib": "1.11.1",
        "typescript": "3.8.3"
    },
    "peerDependencies": {
        "react": "^16.8.0"
    }
}
