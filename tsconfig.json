{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "jsx": "react",
        "lib": [
            "dom",
            "dom.iterable",
            "es2015.collection",
            "es2015.iterable",
            "es5"
        ],
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "target": "es5"
    },
    "include": ["src/**/*"],
    "exclude": ["dist/**/*", "node_modules/**/*"]
}
